mountpoint = "/mnt"

system("apk add parted")

cmd = f"yes | parted {device}"
# partition table
system(f"{cmd} mklabel gpt")
# boot partition
system(f"{cmd} mkpart boot 0 512M")
system("mkfs.vfat {device}1")
system(f"{cmd} set 1 boot on")

fs = get("settings.install.filesystem")
if fs == "btrfs":
    system("apk add btrfs-progs")
elif fs == "ext4":
    # TODO: test
    system("apk add e2fsprogs")

# no luks/lvm
if mode == "simple":
    # position of next partition in the disk
    next_offset = 512
    next_index = 2
    # swap partition
    swap = getswap("partition")
    if swap:
        system(f"{cmd} mkpart swap {next_offset}M {next_offset + swap}M")
        system(f"mkswap {device}{next_index}")
        next_offset += swap
        next_index += 1
    # root partition
    system(f"{cmd} mkpart root {next_offset}M 100%")
    system(f"mkfs.{fs} {device}{next_index + 1}")
    system(f"mount -t {fs} {device}{next_index + 1} {mountpoint}")

    # install
    system("mkdir -p {mountpoint}/boot/efi")
    system("mount -t vfat {device}1 {mountpoint}/boot/efi")
    system("BOOTLOADER=grub USE_EFI=1 setup-disk -m sys {mountpoint}")
elif mode == "full":
    # luks+lvm
    system(f"{cmd} mkpart crypt 512M 100%")
    # TODO: check si cryptsetup marche du premier coup (peut-être un bug quantique, corrigé en upgradant)
    system("apk add cryptsetup")
    # TODO: check si la table de partition est actualisée
    # TODO: mettre une vraie passphrase (prompt l'utilisateur)
    passphrase = "user"
    system(f"echo -e 'YES\n{passphrase}' | cryptsetup luksFormat {device}2")
    system(f"echo '{passphrase}' | cryptsetup open {device}2 custom_crypt")
    system("apk add lvm2")
    system(f"pvcreate /dev/mapper/custom_crypt")
    system(f"vgcreate custom /dev/mapper/custom_crypt")
    # create swap
    swap = getswap("partition")
    if swap:
        system(f"lvcreate --size {swap}M --name swap custom")
        system(f"mkswap /dev/custom/swap")
    # create secondary (encrypted) boot
    system(f"lvcreate --size 2G --name boot custom")
    system(f"mkfs.ext4 /dev/custom/boot")
    # create root
    system(f"lvcreate -l 100%FREE --name root custom")
    system(f"mkfs.{fs} /dev/custom/root")

    # prepare filesystem
    system(f"mount -t ext4 /dev/custom/root {mountpoint}")
    system(f"mkdir {mountpoint}/boot")
    system(f"mount -t ext4 /dev/custom/boot {mountpoint}/boot")
    system(f"mkdir {mountpoint}/boot/efi")
    system(f"mount -t vfat {device}1 {mountpoint}/boot/efi")

    # là là ici là
    # TODO: lire les messages d'erreur
    # TODO: finir l'installateur pour tester plus facilement
    # TODO: essayer de reproduire le même environnement (alpine pur, mêmes paquets,...)
    # TODO: si ça ne suffit pas, réessayer en MBR ? (ou appeler à l'aide sur un alpine natif efi+luks+lvm)
    system(f"setup-disk -m sys /mnt")
else:
    error_unknown("settings.install.mode")

system("mkdir -p {mountpoint}/boot/efi")
system("mount -t vfat {device}1 {mountpoint}/boot/efi")

