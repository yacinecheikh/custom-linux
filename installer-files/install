def getram():
    "return ram size in MB"
    out, _ = system("free -m | tr -s ' ' | head -n 2 | tail -n 1 | cut -d ' ' -f 1")
    return int(out)


def getswap(swaptype):
    "return desired swap size"
    swap = get(f"settings.install.swap.{swaptype}")
    if swap == "none":
        return 0
    elif swap == "auto":
        size = getram()
    elif swap[-1] == "G":
        # 0.5G -> 512 (M)
        size = int(float(swap[:-1]) * 1024)
    else:
        size = int(swap[:-1])

    return size



