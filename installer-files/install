system("apk add arch-install-scripts")

def chroot(cmd, stdin=None, stderr=False):
    return system(f"arch-chroot {mountpoint} {cmd}", stdin, stderr=stderr)

def chadd(pkg):
    out, code = chroot(f"apk add {pkg}")
    if verbose:
        print(out)

def chdel(pkg):
    out, code = chroot(f"apk del {pkg}")
    if verbose:
        print(out)


def unknown(setting):
    value = get(setting)
    error(setting,"unrecognized setting: {value}")


